<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div>
      <h3 class="modal-title">詳細表示</h3>
      <div>
        <P><%= image_tag @picture.picture_url if @picture.picture_url?%></p> 
      </div> 
      <div>
        <p><%= profile_img(@picture.user) %>
        <%= @picture.user.name  %></p>
      </div>
        <p>タイトル：<%= @picture.title %></p>
        <p>コメント：<%= @picture.content %></p>
        <p>投稿日時：<%= @picture.updated_at %></p>
    </div>
  </div>
</div>